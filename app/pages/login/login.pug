mixin app-login-template-mixin
  template#app-login-template
    .col-md-4.col-md-offset-4.col-lg-4.col-lg-offset-4.col-xs-10.col-xs-offset-1.col-xs-10.col-xs-offset-1.text-center.t20
      h3 {{'LOGIN_TITLE' | translate }}
      form(@submit.prevent="login_upw")
        .form
          .form-group
            label(for="username") {{ 'LOGIN_USERNAME' | translate}} 
            input#username.form-control(
              v-model="login.username",
              type="text",
              ref="username_field")
          .form-group
            label(for="password") {{ 'LOGIN_PASSWORD' | translate}} 
            input#password.form-control(
              type="password",
              v-model="login.password")
          button.btn.btn-success.btn-block(type="submit") {{ 'LOGIN_LOGIN' | translate }}
      button.btn.btn-default.btn-block.t30(@click="login_oauth2")
        img.r10(src="img/google.png")
        | {{ 'LOGIN_GOOGLE' | translate}}
      button.btn.btn-link.btn-block.t20 {{ 'LOGIN_FORGOT_PW' | translate}}
      transition(name="fade")
        .alert.alert-danger.t30(v-show="error_message") {{error_message | translate}}
